<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsandAgree"
    android:background="@color/profilebg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"
        android:elevation="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <ImageView
        android:layout_width="213dp"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="-27dp"
        android:src="@drawable/yellowish" />


    <ImageView
        android:id="@+id/backers2"
        android:layout_width="313dp"
        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-109dp"
        android:layout_marginTop="-87dp"
        android:src="@drawable/yellowcent" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="185dp"
        android:src="@drawable/skycir" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:fontFamily="sans-serif-black"
        android:text="Terms and \nCondition"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/tac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="@string/terms"
        android:textAlignment="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <Button
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tac"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:text="I Agree"
        android:textColor="@color/profilebg" />


</RelativeLayout>