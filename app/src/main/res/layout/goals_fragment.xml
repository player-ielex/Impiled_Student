<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/goalsbg">

    <ImageView
        android:layout_width="193dp"
        android:layout_height="244dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-7dp"
        android:src="@drawable/yellowish" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/skycir" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="71dp"
        android:src="@drawable/viocir" />

    <TextView
        android:id="@+id/goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-black"
        android:text="Goals"
        android:textColor="@color/white"
        android:textSize="65dp" />

    <TextView
        android:id="@+id/goslcrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="149dp"
        android:text="Accomplish the things you want and be motivated"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goalView"
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:layout_below="@+id/goslcrip"
        android:layout_marginTop="17dp" />



</RelativeLayout>