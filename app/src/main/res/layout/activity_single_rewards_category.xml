<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rewardsback"
    tools:context=".SingleRewardsCategory">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="34dp"
        android:elevation="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/backing"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/redish" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-19dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/yellowish" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-56dp"
        android:layout_marginTop="79dp"
        android:src="@drawable/skycir" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="-91dp"
        android:src="@drawable/greencir" />


    <ImageView
        android:id="@+id/re_pic"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/re_name"
        android:layout_marginTop="18dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp"
        android:gravity="center"
        android:text="Rewards Category"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rewardcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="92dp"
        android:fontFamily="sans-serif-black"
        android:text="Category"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rewardcat"
        android:layout_marginTop="2dp" />

</RelativeLayout>