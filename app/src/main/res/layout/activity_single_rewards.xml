<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleRewards"
    android:background="@color/rewardsback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="34dp"
                android:elevation="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/status"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="265dp"
                android:layout_marginTop="356dp"
                android:elevation="20dp"
                android:src="@drawable/added" />

            <ImageView
                android:id="@+id/backing"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/redish" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-19dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/yellowish" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-44dp"
                android:layout_marginTop="164dp"
                android:src="@drawable/skycir" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="187dp"
                android:layout_marginEnd="-77dp"
                android:src="@drawable/greencir" />




            <ImageView
                android:id="@+id/re_pic"
                android:layout_centerHorizontal="true"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_below="@+id/re_name"
                android:layout_marginTop="18dp"
                android:scaleType="centerInside" />


            <TextView
                android:id="@+id/re_name"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="108dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rewards Name"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/re_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re_pic"
                android:layout_marginTop="19dp"
                android:layout_centerHorizontal="true"
                android:width="300dp"
                android:gravity="center"
                android:text="@string/project_description"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/show"
                android:background="@drawable/show__but"
                android:layout_width="150dp"
                android:layout_marginBottom="25dp"
                android:text="View Task"
                android:textColor="@color/rewardsback"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-black"
                android:layout_below="@+id/re_des"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>