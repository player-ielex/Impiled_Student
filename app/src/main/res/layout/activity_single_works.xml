<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleWorks"
    android:background="@color/worksbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:elevation="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-17dp"
                android:layout_marginEnd="-4dp"
                android:src="@drawable/yellowcorner" />


            <ImageView
                android:id="@+id/backers2"
                android:layout_width="201dp"
                android:layout_height="174dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="-7dp"
                android:src="@drawable/pinkishcorner" />

            <ImageView

                android:layout_width="118dp"
                android:layout_height="97dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="145dp"
                android:layout_marginTop="-16dp"
                android:src="@drawable/greencir" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-62dp"
                android:layout_marginTop="95dp"
                android:src="@drawable/skycir" />

            <ImageView
                android:layout_width="57dp"
                android:layout_height="73dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="-14dp"
                android:src="@drawable/viocir" />

            <TextView
                android:id="@+id/works_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="The Price and the Beauty Prince"
                android:textSize="40dp"/>

            <LinearLayout
                android:id="@+id/com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/works_name"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="By: " />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Paul Jolou Barrientos" />

            </LinearLayout>

            <ImageView
                android:id="@+id/pic"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_below="@+id/com"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/pic"
                android:layout_marginTop="28dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:text="@string/project_description"
                android:layout_marginBottom="20dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>