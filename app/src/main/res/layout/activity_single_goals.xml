<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleGoals"
    android:background="@color/goalsbg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"
        android:elevation="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-17dp"
        android:layout_marginEnd="-4dp"
        android:src="@drawable/yellowcorner" />


    <ImageView
        android:id="@+id/backers2"
        android:layout_width="201dp"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/pinkishcorner" />

    <ImageView

        android:layout_width="118dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="-16dp"
        android:src="@drawable/greencir" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-62dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/skycir" />

    <ImageView
        android:layout_width="57dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-14dp"
        android:src="@drawable/viocir" />

    <TextView
        android:id="@+id/name_re"
        android:layout_width="match_parent"
        android:gravity="center"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:text="Rewards Name"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="50dp"/>


    <TextView
        android:id="@+id/task_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_re"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/project_description"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="10dp"
        android:layout_height="200dp"
        android:layout_below="@+id/task_re"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pends"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:text="Did you Finish your task?"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/goalsbg"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginTop="50dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/pends"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/yess"
                   android:background="@color/goalsbg"
                    android:textColor="@color/white"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/notyet"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Not Yet"
                    android:background="@color/goalsbg"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/loc"
                android:textColor="@color/goalsbg"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pends"
                android:visibility="gone"
                android:layout_marginTop="19dp"
                android:text="You can now get your rewards at Proware" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_alignParentTop="true"
        android:layout_marginTop="539dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/log_button"
        android:fontFamily="sans-serif-black"
        android:padding="14dp"
        android:text="Remove from Goals"
        android:textColor="@color/profilebg" />





</RelativeLayout>